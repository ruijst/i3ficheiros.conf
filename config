# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3blocks -c /home/ruijst/.i3/i3blocks.conf
	position top
	separator_symbol " | "
	#tray_output primary
	#font pango:DejaVu Sans Mono, Ionicons, FontAwesome 9
	font pango:Cantarell Regular 8
	colors {
		background $bar-bg-color
		statusline #dddddd
		separator #757575
		#                  border                  background              text
		active_workspace   $bar-bg-color           $bar-bg-color           $bar-text-color
		focused_workspace  $bar-active-bg-color    $bar-active-bg-color    $bar-text-color
		inactive_workspace $bar-inactive-bg-color  $bar-inactive-bg-color  $bar-inactive-text-color
		urgent_workspace   $bar-urgent-bg-color    $bar-urgent-bg-color    $bar-text-color
	}
	#mode hide
	#hidden_state hide
	#modifier Mod1
}

